// Function to create item for the menu
void ITEM(int x_pos_rec, int y_pos_rec, int x_rec, int y_rec,
          int x_cur, int y_cur, String text, int x_cursor,
          int y_cursor, int Obj, String S){

      display.fillRect(x_pos_rec, y_pos_rec, x_rec, y_rec, SSD1306_WHITE);
      display.setTextSize(1);                                                   // Normal 1:1 pixel scale
      display.setTextColor(SSD1306_WHITE);                                      // Draw white text
      display.setCursor(x_cur, y_cur);                                          // Start at top-left corner
      display.print(text);
      display.setTextColor(SSD1306_BLACK);                                      // Draw Black text
      display.setCursor(x_cursor,y_cursor);
      display.print(Obj + S);
            
